--Adding Storage UICorner

InventoryBar.Parent = game.CoreGui.RobloxGui.Backpack.Inventory

--Adding Storage Search Bar UICorner

InventorySearchBar.Parent = game.CoreGui.RobloxGui.Backpack.Inventory.Search

--Adding Textbox UICorner

game:GetService("CoreGui").RobloxGui.Backpack.Inventory.Search.TextBox.TextColor3 = Color3.fromRGB(255, 255, 255)

--Deleting Exit

game.CoreGui.RobloxGui.Backpack.Inventory.Search.X:Destroy()

--Setting InventorySearchBar Mods

game:GetService("CoreGui").RobloxGui.Backpack.Inventory.Search.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
game:GetService("CoreGui").RobloxGui.Backpack.Inventory.Search.BackgroundTransparency = 0

--Setting Search TextBox Placeholders

game:GetService("CoreGui").RobloxGui.Backpack.Inventory.Search.TextBox.PlaceholderColor3 = Color3.fromRGB(255, 255, 255)
game:GetService("CoreGui").RobloxGui.Backpack.Inventory.Search.TextBox.PlaceholderText = Search
